<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-2">
    <div class="class col-8 offset-3 ">
    <h3><%=list.title%></h3>
    </div>
    <div class="col-6 offset-3 listing-card card" >
    <img src="<%=list.image%>" class="card-img-top show-img" alt="...">
    <div class="card-body">
    <p class="card-text"><ul>
        <li><%=list.description%></li>
        <li>&#8377;<%=list.price.toLocaleString("en-IN")%></li>
        <li><%=list.location%></li>
        <li><%=list.country%></li>
    </ul></p>
    </div>
    </div>
    <div class="btns">
        <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 editclr">edit</a>
        <form method="post" action="/listings/<%=list._id%>?_method=DELETE">
    <button class="btn btn-dark offset-2">delete</button>
    </form>
</div>

<div class="col-8 offset-3 ">
    <hr>
    <h4 class="mt-2">Leave A Review</h4>
    <form method="post" action="/listings/<%=list._id%>/reviews" novalidate class="needs-validation">
        <div class="mb-2 mt-3">
            <label for="rating " class="form-label">Review</label>
            <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
        </div>
        <div class="mb-2">
            <label for="comment" class="form-label">Review</label>
            <textarea name="review[comment]" id="comment" cols="50" rows="5" class="form-control" required ></textarea>
                <div class="invalid-feedback">
                    Please provide a review.
                </div>
            
        </div>
        <button class="mt-2 mb-3 btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <h4><b>All Reviews</b></h4>
    <div class="row mt-3">
    <% for(rev of list.reviews){ %>
    <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
        <h5 class="card-title">Sanjay  </h5>
            <h5 class="card-text">Rating: <%=rev.rating%></h5>
            <p class="card-text"><%=rev.comment%></p>
        </div>
        <form method="post" action="/listings/<%=list._id%>/reviews/<%=rev._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark mt-2 mb-2">delete</button>
        </form>
        </div>
        <% } %>
    </div>
    </div>
</div>
</body> 
