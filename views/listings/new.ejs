<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h1>New Listing</h1>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data" >
      
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input 
          type="text" 
          id="title" 
          placeholder="Title" 
          name="listing[title]" 
          class="form-control"
          required
        >
      <div class="valid-feedback">
          Perfect!
    </div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea 
          id="description" 
          placeholder="Description" 
          name="listing[description]" 
          class="form-control"
          required
        ></textarea>
              <div class="invalid-feedback">
      Field Required!
    </div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Image:</label>
        <input 
          type="file" 
          id="image" 
          placeholder="Image URL" 
          name="listing[image]" 
          class="form-control"
        ></input>

      </div>

      <!-- Price and Location -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price:</label>
          <input 
            type="text" 
            id="price" 
            placeholder="Price" 
            name="listing[price]" 
            class="form-control"
            required
          >
                <div class="invalid-feedback">
      Field Required!
    </div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location:</label>
          <input 
            type="text" 
            id="location" 
            placeholder="Location" 
            name="listing[location]" 
            class="form-control"
            required
          >
          <div class="invalid-feedback">
      Field Required!
    </div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input 
          type="text" 
          id="country" 
          placeholder="Country" 
          name="listing[country]" 
          class="form-control"
          required
        >
        <div class="invalid-feedback">
      Field Required!
    </div>
      </div>

      <!-- Submit button -->
      <button class="btn btn-dark add-btn editclr">Add</button>
    </form>
  </div>
</div>
